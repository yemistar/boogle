<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ToolbarThem" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/holo_blue_light</item>
        <item name="android:textColorSecondary">@android:color/white</item>

    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <!--<item name="android:typeface">@font/abel</item>-->
        <item name="android:textStyle">italic</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>

    </style>

    <!--The jump back in text-->
    <style name="JumpIn" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>

    </style>

    <!--For activities that want actionbar -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BookDes_style">
        <item name="android:maxLines">10</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- android:maxLines="10"
                        android:lineSpacingExtra="3dp"
                        android:textColor="@android:color/black"
                        android:textStyle="italic|bold"
                        android:padding="5dp"-->


</resources>
